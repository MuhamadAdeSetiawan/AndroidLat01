<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#83e2ff"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btAjax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ajax"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBarcelona"
        android:layout_width="226dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Barcelona"
        app:layout_constraintStart_toEndOf="@+id/btAjax"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btRealMadrid"
        android:layout_width="317dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Real Madrid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btBarcelona"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/btRoma"
        android:layout_width="75dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Roma"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btRealMadrid"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btArsenal"
        android:layout_width="86dp"
        android:layout_height="52dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Arsenal"
        app:layout_constraintEnd_toEndOf="@+id/btRealMadrid"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/btJuventus"
        app:layout_constraintTop_toBottomOf="@+id/btRealMadrid"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btJuventus"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:text="Juventus"
        app:layout_constraintStart_toEndOf="@+id/btRoma"
        app:layout_constraintTop_toBottomOf="@+id/btRealMadrid"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>